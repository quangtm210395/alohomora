{
  "compilerOptions": {
    "esModuleInterop": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "types": ["node", "mocha"],
    "declaration": true,
    "sourceMap": true,
    "target": "es2018",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "lib": ["es2018", "esnext.asynciterable"],
    "baseUrl": "./src",
    "outDir": "dist",
    "paths": {
      "@Lib/*": ["lib/*"]
    }
  },
  "include": ["./src"],
  "exclude": ["node_modules/*"]
}
